---
import "../styles/reset.css";
import Footer from "../components/Footer.astro";
import { name } from "../data/contact";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const fullTitle = title ? `${title} - ${name}` : name;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Homepage der Gartenbau Felsberg GmbH in Neuwilen"
    />
    <meta
      name="keywords"
      content="Gartenbau Felsberg GmbH, Neuanlagen, Gartenumgestaltung, Grabpflege, Kreuzlingen, Neuwilen"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="canonical" content="https://www.felsberg-gartenbau.ch/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{fullTitle}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/gartenbau">Gartenbau</a>
          </li>
          <li>
            <a href="/gartenunterhalt">Gartenunterhalt</a>
          </li>
          <li>
            <a href="/grabpflege">Grabpflege</a>
          </li>
          <li>
            <a href="/ueber-uns">Ãœber uns</a>
          </li>
          <li>
            <a href="/stellen">Offene Stellen</a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --color-green-main: #245d24;
    --color-white-main: #ffffff;
    --color-yellow-main: #ffe900;

    --spacing-05: 0.5rem;
    --spacing-1: 1rem;
    --spacing-2: 2rem;
    --spacing-3: 3rem;
    --spacing-6: 6rem;
  }

  html {
    font-family: Tahoma, sans-serif;
  }

  main {
    margin: auto;
    padding: var(--spacing-3) var(--spacing-1);
    width: 800px;
    max-width: calc(100% - var(--spacing-2));

    @media (--breakpoint-min-md) {
      padding-block: var(--spacing-6);
    }
  }

  ::selection {
    background: var(--color-yellow-main);
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    line-height: 1.2;
    margin-block-end: 1em;

    @media (--breakpoint-min-sm) {
      font-size: 2.25rem;
    }

    @media (--breakpoint-min-md) {
      font-size: 2.5rem;
    }
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.2;
    margin-block: 1.5em 1em;

    @media (--breakpoint-min-sm) {
      font-size: 2rem;
    }

    @media (--breakpoint-min-md) {
      font-size: 1.75rem;
      margin-block-start: 2.5em;
    }
  }

  p,
  ul,
  li {
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.4;
    margin-block-end: 1em;

    @media (--breakpoint-min-md) {
      font-size: 1.25rem;
    }
  }

  li {
    margin: 0;
    line-height: 1.5;
  }

  main a {
    font-weight: bold;
    color: var(--color-green-main);
  }

  footer {
    font-size: 1rem;

    @media (--breakpoint-min-md) {
      font-size: 1.125rem;
    }
  }
</style>
