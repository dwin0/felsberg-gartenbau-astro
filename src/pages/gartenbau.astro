---
import getGalleryImages from "../utils/getGalleryImages";
import Layout from "../layouts/Layout.astro";
import HeaderImage from "../components/HeaderImage.astro";
import ImageGallery from "../components/ImageGallery";
import headerImageSrc from "../images/biotop-min.jpg";

import brunnen from "../images/brunnen-min.jpg";
import neuanlage from "../images/neuanlage-min.jpg";
import sichtschutzwand from "../images/sichtschutzwand-min.jpg";
import sitzplatzMitWeg from "../images/sitzplatz_mit_porphyrplattenweg-min.jpg";
import grillstelle from "../images/grillstelle-min.jpg";
import sitzplatz from "../images/sitzplatz-min.jpg";
import biotop1 from "../images/biotop-min.jpg";
import biotop2 from "../images/biotop2-min.jpg";

const galleryImages = await getGalleryImages([
  {
    src: brunnen,
    alt: "Brunnen",
  },
  {
    src: neuanlage,
    alt: "Neuanlage",
  },
  {
    src: sichtschutzwand,
    alt: "Sichtschutzwand",
  },
  {
    src: sitzplatzMitWeg,
    alt: "Sitzplatz",
  },
  {
    src: grillstelle,
    alt: "Grillstelle",
  },
  {
    src: sitzplatz,
    alt: "Sitzplatz",
  },
  {
    src: biotop1,
    alt: "Biotop",
  },
  {
    src: biotop2,
    alt: "Biotop ",
  },
]);
---

<Layout title="Gartenbau">
  <HeaderImage
    slot="header-image"
    image={headerImageSrc}
    alt="Teich, umrandet mit Steinen"
    objectPosition="50% 45%"
  />
  <h1 id="main">Gartenbau</h1>
  <p>
    Unser Team verhilft Ihnen zu einem schönen Garten. Als gelernte Gartenbauer
    mit jahrelanger Erfahrung übernehmen wir sowohl die Neugestaltung Ihres
    Gartens als auch Gartenumänderungen.
  </p>
  <p>Dazu gehören unter anderem folgende Arbeiten:</p>
  <ul>
    <li>Natursteinarbeiten</li>
    <li>Sitzplätze</li>
    <li>Mauern</li>
    <li>Sichtschutz</li>
    <li>Teiche</li>
    <li>Rasen</li>
    <li>Bepflanzungen</li>
  </ul>

  <h2>Bildgalerie</h2>
  <ImageGallery client:load images={galleryImages} />
</Layout>
