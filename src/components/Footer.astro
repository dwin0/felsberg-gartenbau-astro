---
import { googleMapsLink, phoneNumber, email } from "../data/contact";
---

<footer>
  <a href={googleMapsLink} target="_blank" rel="noopener">
    <address>
      <span class="address-item">Gartenbau Felsberg GmbH</span>
      <span class="address-item">Greestrasse 26</span>
      <span class="address-item">8566 Neuwilen</span>
    </address>
  </a>
  <a href={`tel:${phoneNumber}`}>Telefon: {phoneNumber}</a>
  <a href={`mailto:${email}`}>Email: {email}</a>
  <a href="/datenschutz">Datenschutz</a>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--color-green-main);
    color: var(--color-white-main);
    padding-block: var(--spacing-3);
  }

  address {
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (--breakpoint-min-md) {
      display: block;
    }
  }

  .address-item:not(:first-child)::before {
    @media (--breakpoint-min-md) {
      content: "|";
      padding-inline: var(--spacing-05);
    }
  }

  a {
    text-decoration: none;
    color: var(--color-white-main);
    padding-block: 0.75em;

    @media (--breakpoint-min-md) {
      display: block;
      padding-block: 0.25em;
    }

    &:hover {
      text-decoration: underline;
    }
  }
</style>
