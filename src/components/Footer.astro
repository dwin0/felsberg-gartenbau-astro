---
import {
  name,
  street,
  zipCode,
  city,
  googleMapsLink,
  phoneNumber,
  email,
  phoneNumberIntl,
} from "../data/contact";
---

<footer>
  <a href={googleMapsLink} target="_blank" rel="noopener">
    <address>
      <span>{name}</span>
      <span class="address-separator" aria-hidden="true">|</span>
      <span>{street}</span>
      <span class="address-separator" aria-hidden="true">|</span>
      <span>{zipCode} {city}</span>
    </address>
  </a>
  <a href={`tel:${phoneNumberIntl}`}>Telefon: {phoneNumber}</a>
  <a href={`mailto:${email}`}>Email: {email}</a>
  <a href="/datenschutz">Datenschutz</a>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: var(--color-green-main);
    color: var(--color-white-main);
    padding-block: var(--spacing-3);
  }

  address {
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (--breakpoint-min-md) {
      display: block;
    }
  }

  .address-separator {
    display: none;

    @media (--breakpoint-min-md) {
      display: inline;
      padding-inline: var(--spacing-0_5);
    }
  }

  a {
    text-decoration: none;
    color: var(--color-white-main);
    padding-block: 0.75em;

    @media (--breakpoint-min-md) {
      display: block;
      padding-block: 0.25em;
    }

    &:hover {
      text-decoration: underline;
    }
  }
</style>
